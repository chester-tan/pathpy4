[flake8]
# Use the suggested line length recommended in PEP8.
max-line-length = 79
# This ignore is required by black.
extend-ignore = E203
extend-exclude =
    venv,versioneer.py,src/pathpy/_version.py
# flake8-bugbear config.
# This argument is not needed if not using Typer as a dependency.
extend-immutable-calls =
    Argument
